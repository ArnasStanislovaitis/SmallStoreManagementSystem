@model IEnumerable<SmallStoreManagementSystem.Models.UserProductHistory>

@{
    ViewData["Title"] = "ViewHistory";
}

<h1>Recently viewed products</h1>

<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Date Viewed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var history in Model)
        {
            <tr>
                <td class="product-name">@history.ProductName</td>
                <td>@history.DateViewed.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>            
        }
    </tbody>
</table>

<div>
     @if (User.IsInRole("Administrators")){                    
     <a asp-action="Edit" >Edit</a>
     }
    <a asp-action="Index">Back to List</a>
</div>